<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".confirmquiz.SoalEssayConfirm">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/freedom"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note :"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginTop="16dp"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kuis ini berisikan 5 soal Essay apakah ingin memulai quiz?"
        android:textColor="#000"
        android:textSize="16dp"
        android:layout_marginLeft="16dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start2"
        android:layout_gravity="center"
        android:text="Mulai Quiz "
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textColor="#000"
        android:background="@null"
        android:layout_marginTop="16dp"

        android:drawableRight="@drawable/ic_play_circle_outline_black_24dp"

        />

</LinearLayout>